<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Swapp.ItemSwipe">

  <LinearLayout
      android:id="@+id/header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/bottom_border"
      android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <ImageView
          android:layout_width="35dp"
          android:layout_height="35dp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:layout_marginEnd="10dp"
          android:layout_marginStart="20dp"
          android:src="@drawable/ic_arraw_back__1_"
          android:layout_gravity="center_vertical"
          app:tint="@color/primary_black" />

      <ImageView
          android:layout_width="35dp"
          android:layout_alignParentEnd="true"
          android:layout_height="35dp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:layout_marginEnd="20dp"
          android:layout_marginStart="10dp"
          android:src="@drawable/ic_filter"
          app:tint="@color/primary_black" />

    </RelativeLayout>

  </LinearLayout>

  <com.lorentzos.flingswipe.SwipeFlingAdapterView
      android:id="@+id/frame"
      android:background="@color/white"
      android:layout_width="match_parent"
      android:layout_below="@id/header"
      android:layout_height="match_parent"
      app:rotation_degrees="0"
      app:max_visible="2"/>

    <RelativeLayout
        android:id="@+id/noMoreItemBanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

      <TextView
          android:id="@+id/headerNoMoreItem"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/poppins_medium"
          android:textStyle="bold"
          android:textSize="36dp"
          android:layout_marginTop="250dp"
          android:textAlignment="center"
          android:textColor="@color/black"
          android:text="NO MORE ITEM." />

      <TextView
          android:id="@+id/noMoreItemText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/poppins"
          android:textSize="20dp"
          android:textAlignment="center"
          android:paddingLeft="20dp"
          android:paddingRight="20dp"
          android:textColor="@color/black"
          android:layout_below="@id/headerNoMoreItem"
          android:text="There's no more item to display for this category."/>

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/returnToCategories"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/buttonborder"
          android:text="RETURN TO CATEGORIES"
          android:textColor="@color/white"
          android:textSize="24dp"
          android:layout_marginTop="20dp"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:padding="10dp"
          android:fontFamily="@font/poppins_semibold"
          android:layout_below="@id/noMoreItemText"/>

    </RelativeLayout>

</RelativeLayout>