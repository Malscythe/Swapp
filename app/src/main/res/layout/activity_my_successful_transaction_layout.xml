<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_border">

            <ImageView
                android:id="@+id/postedpic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/noimage" />

            <ImageView
                android:id="@+id/offeredpic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/noimage" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/postedpic">

                <TextView
                    android:id="@+id/postedItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:maxLines="1"
                    android:text="Item Name"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/primary_black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/postername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/postedItemName"
                    android:fontFamily="@font/poppins"
                    android:maxLines="1"
                    android:text="Poster Name"
                    android:layout_marginStart="5dp"
                    android:textColor="#888686"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/topArrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_arrow_forward_24"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:layout_below="@id/topArrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arraw_back__1_"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/offeredpic">

                <TextView
                    android:id="@+id/offeredItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:maxLines="1"
                    android:text="Item Name"
                    android:layout_marginEnd="5dp"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/primary_black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/offerername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/offeredItemName"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/poppins"
                    android:maxLines="1"
                    android:text="Offerer Name"
                    android:layout_marginEnd="5dp"
                    android:textColor="#888686"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/revealButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/postedMoreInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="View posted item details"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/bottom_border"
                android:textColor="@color/primary_black"
                android:fontFamily="@font/poppins"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/offeredMoreInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="View offered item details"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/primary_black"
                android:background="@drawable/bottom_border"
                android:fontFamily="@font/poppins"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <TextView
            android:id="@+id/submitRating"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="submit rating"
            android:paddingTop="10dp"
            android:visibility="gone"
            android:paddingBottom="10dp"
            android:textColor="@color/white"
            android:background="@drawable/bottom_border_primary"
            android:fontFamily="@font/poppins"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textAllCaps="true"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</RelativeLayout>