<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:id="@+id/rootLayout"
    android:gravity="center">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="15dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/logoText"
        android:layout_marginBottom="-10dp"
        android:transitionName="imageTransition"
        android:src="@drawable/swapplogotransparent" />

    <TextView
        android:id="@+id/logoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="Swapp"
        android:transitionName="textTransition1"
        android:textColor="@color/white"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/logoDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logoText"
        android:fontFamily="@font/poppins"
        android:visibility="invisible"
        android:transitionName="textTransition2"
        android:text="Online bartering application"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>