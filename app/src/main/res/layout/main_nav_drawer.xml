<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/topBanner"
        android:background="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:paddingTop="30dp"
        android:paddingBottom="40dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/primary_black"
            android:src="@drawable/noimage"/>

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terence Malsi"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_toEndOf="@id/profilePic"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins"/>

        <RatingBar
            android:id="@+id/userRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userName"
            android:layout_toEndOf="@id/profilePic"
            android:layout_marginStart="10dp"
            android:progressTint="@android:color/holo_orange_light"
            android:rating="2"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:isIndicator="true"
            android:numStars="5"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/accountSettings"
        android:layout_below="@id/topBanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/logoutRoot"
        android:orientation="vertical">

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/accountDetails"
            android:background="@drawable/bottom_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account settings"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/primary_black"
            android:textSize="18sp"
            android:onClick="clickAccountDetails"/>

        <TextView
            android:id="@+id/changePass"
            android:background="@drawable/bottom_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change password"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/primary_black"
            android:textSize="18sp"
            android:onClick="clickChangePass"/>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/logoutRoot"/>

    <RelativeLayout
        android:id="@+id/logoutRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:onClick="clickLogout">

        <ImageView
            android:id="@+id/logoutIcon"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_baseline_logout_36"
            app:tint="@color/primary_black" />

        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/logoutIcon"
            android:fontFamily="@font/poppins"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Log out"
            android:textColor="@color/primary_black"
            android:textSize="18sp" />

    </RelativeLayout>

</RelativeLayout>