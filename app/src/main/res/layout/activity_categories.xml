                <androidx.cardview.widget.CardView
                    android:id="@+id/all"
                    android:layout_width="100dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#8E8888"
                    android:elevation="10dp"
