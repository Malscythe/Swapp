<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_border"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/toRateID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/poppins"
            android:text="UserID"
            android:textColor="@color/primary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/transactionKeyText"
            android:layout_below="@id/toRateID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/poppins"
            android:text="Transaction key: "
            android:textColor="@color/primary_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ratedText"
            android:layout_below="@id/transactionKeyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/poppins"
            android:text="Rated by: "
            android:textColor="@color/primary_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ratedByID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/ratedText"
            android:fontFamily="@font/poppins"
            android:layout_below="@id/transactionKeyText"
            android:text="Rated by ID"
            android:textColor="@color/primary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/transactionKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/poppins"
            android:gravity="end"
            android:layout_toEndOf="@id/transactionKeyText"
            android:text="Transaction Key"
            android:layout_below="@id/toRateID"
            android:textColor="@color/primary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ratingText"
            android:layout_below="@id/ratedByID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/poppins"
            android:text="Rating: "
            android:textColor="@color/primary_black"
            android:textSize="12sp" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_toEndOf="@id/ratingText"
            android:layout_below="@id/ratedByID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:isIndicator="true"/>

        <TextView
            android:id="@+id/feedback"
            android:layout_below="@id/ratingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/poppins"
            android:text="Feedback"
            android:layout_marginTop="5dp"
            android:textColor="@color/primary_black"
            android:textSize="14sp" />

    </RelativeLayout>

</RelativeLayout>