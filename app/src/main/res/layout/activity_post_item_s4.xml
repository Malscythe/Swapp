<?xml version="1.0" encoding="utf-8"?>
  <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Swapp.PostItem_S4">

  <com.kofigyan.stateprogressbar.StateProgressBar
      android:id="@+id/stateProgress"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:layout_marginBottom="30dp"
      app:spb_animateToCurrentProgressState="true"
      app:spb_checkStateCompleted="true"
      app:spb_currentStateDescriptionColor="@color/primary"
      app:spb_currentStateNumber="four"
      app:spb_maxStateNumber="four"
      app:spb_stateBackgroundColor="@color/primary_black"
      app:spb_stateDescriptionColor="@color/primary_black"
      app:spb_stateForegroundColor="@color/primary"
      app:spb_stateNumberBackgroundColor="#808080"
      app:spb_stateNumberForegroundColor="@color/white" />

  <TextView
      android:id="@+id/stepTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/stateProgress"
      android:layout_centerHorizontal="true"
      android:layout_marginLeft="30dp"
      android:layout_marginRight="30dp"
      android:layout_marginBottom="30dp"
      android:fontFamily="@font/poppins"
      android:text="ITEM IMAGES"
      android:textColor="@color/primary_black"
      android:textSize="24sp"
      android:textStyle="bold" />

  <LinearLayout
      android:layout_below="@id/stepTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="30dp"
      android:layout_marginRight="30dp"
      android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select images for this item."
        android:fontFamily="@font/poppins"
        android:textColor="@color/primary_black"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Max of 4 images)"
        android:fontFamily="@font/poppins"
        android:textColor="@color/primary_black"
        android:textStyle="italic"
        android:layout_marginBottom="20dp"
        android:textSize="12sp"/>

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/imagePreview"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        app:iss_auto_cycle="false"
        android:visibility="visible"
        app:iss_period="1000"
        android:padding="1dp"
        android:background="@drawable/border"
        android:layout_marginBottom="30dp"
        app:iss_delay="0"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/insertImages"
        android:background="@drawable/buttonborder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:text="Insert photo" />

  </LinearLayout>

  </RelativeLayout>