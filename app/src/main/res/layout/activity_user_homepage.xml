<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    tools:context="com.example.Swapp.UserHomepage">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/outboundTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="-.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bgBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/outboundLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="-.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/outboundRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reportTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reportBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reportLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reportRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".90" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tradeTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tradeBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".67" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tradeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tradeRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".90" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/threeTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".70" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/threeBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".80" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/firstLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/firstRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".34" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/secondLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".37" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/secondRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".63" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/thirdLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".66" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/thirdRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".9" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/layout_bg_primary"
        app:layout_constraintBottom_toTopOf="@id/bgBot"
        app:layout_constraintEnd_toEndOf="@id/outboundRight"
        app:layout_constraintStart_toStartOf="@id/outboundLeft"
        app:layout_constraintTop_toTopOf="@id/outboundTop">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/navTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".62" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/navBot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".67" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/menuLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/menuRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".32" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/logOutLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".67" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/logOutRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".74" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/picTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".70" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/picBot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".84" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/picLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".27" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/picRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".42" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/nameTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".73" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/nameBot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".78" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/nameLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".42" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/nameRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".65" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ratingTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".77" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ratingBot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".79" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ratingLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".42" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ratingRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".53" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_baseline_menu_24"
            app:layout_constraintBottom_toTopOf="@id/navBot"
            app:layout_constraintEnd_toEndOf="@id/menuRight"
            app:layout_constraintStart_toStartOf="@id/menuLeft"
            app:layout_constraintTop_toBottomOf="@id/navTop" />

        <ImageView
            android:id="@+id/logoutBtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_baseline_logout_36"
            app:layout_constraintBottom_toTopOf="@id/navBot"
            app:layout_constraintEnd_toEndOf="@id/logOutRight"
            app:layout_constraintStart_toStartOf="@id/logOutLeft"
            app:layout_constraintTop_toBottomOf="@id/navTop" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="6dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/picBot"
            app:layout_constraintEnd_toEndOf="@id/picRight"
            app:layout_constraintStart_toStartOf="@id/picLeft"
            app:layout_constraintTop_toBottomOf="@id/picTop"
            app:shapeAppearanceOverlay="@style/circleImageView"
            app:srcCompat="@drawable/default_picture"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/poppins"
            android:text="Full Name"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:gravity="bottom"
            app:layout_constraintBottom_toTopOf="@id/nameBot"
            app:layout_constraintEnd_toEndOf="@id/nameRight"
            app:layout_constraintStart_toStartOf="@id/nameLeft"
            app:layout_constraintTop_toBottomOf="@id/nameTop" />

        <RatingBar
            style="?attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            app:layout_constraintBottom_toTopOf="@id/ratingBot"
            app:layout_constraintEnd_toEndOf="@id/ratingRight"
            app:layout_constraintStart_toStartOf="@id/ratingLeft"
            app:layout_constraintTop_toBottomOf="@id/ratingTop" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/reportbg"
        app:layout_constraintBottom_toTopOf="@id/reportBot"
        app:layout_constraintEnd_toEndOf="@id/reportRight"
        app:layout_constraintStart_toStartOf="@id/reportLeft"
        app:layout_constraintTop_toBottomOf="@id/reportTop">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/reportTitleTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/reportTitleBot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".3" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/reportTitleLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/reportTitleRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dividerTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".3" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dividerBot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".35" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/clickChartTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/clickChartBot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".15" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/clickChartLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/clickChartRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dividerVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horiDivTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".65" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horiDivBot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".67" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/leftDivLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/leftDivRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".45" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rightDivLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".55" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rightDivRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/topDivTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".37" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/topDivBot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".53" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/botDivBot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".83" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/botDivBot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".97" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Trades Report Summary"
            android:textSize="16dp"
            android:textColor="@color/primary2"
            android:fontFamily="@font/poppins_medium"
            android:gravity="bottom"
            app:layout_constraintStart_toStartOf="@id/reportTitleLeft"
            app:layout_constraintEnd_toEndOf="@id/reportTitleRight"
            app:layout_constraintTop_toBottomOf="@id/reportTitleTop"
            app:layout_constraintBottom_toTopOf="@id/reportTitleBot"/>

        <TextView
            android:id="@+id/viewBtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="View chart >>"
            android:textSize="11dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:gravity="end"
            app:layout_constraintStart_toStartOf="@id/clickChartLeft"
            app:layout_constraintEnd_toEndOf="@id/clickChartRight"
            app:layout_constraintTop_toBottomOf="@id/clickChartTop"
            app:layout_constraintBottom_toTopOf="@id/clickChartBot"/>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dividerInsetStart="16dp"
            app:dividerInsetEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dividerTop"
            app:layout_constraintBottom_toTopOf="@id/dividerBot"/>

        <View
            android:layout_width="1.5dp"
            android:layout_height="fill_parent"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="10dp"
            android:background="#EFEFEF"
            app:layout_constraintStart_toStartOf="@id/dividerVertical"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/leftDivLeft"
            app:layout_constraintEnd_toEndOf="@id/leftDivRight"
            app:layout_constraintTop_toBottomOf="@id/horiDivTop"
            app:layout_constraintBottom_toTopOf="@id/horiDivBot"/>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/rightDivLeft"
            app:layout_constraintEnd_toEndOf="@id/rightDivRight"
            app:layout_constraintTop_toBottomOf="@id/horiDivTop"
            app:layout_constraintBottom_toTopOf="@id/horiDivBot"/>

        <TextView
            android:id="@+id/successfulText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="24"
            android:textSize="24dp"
            android:textColor="@android:color/holo_green_light"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="start|top"
            app:layout_constraintStart_toStartOf="@id/leftDivLeft"
            app:layout_constraintEnd_toEndOf="@id/leftDivRight"
            app:layout_constraintTop_toBottomOf="@id/topDivTop"
            app:layout_constraintBottom_toTopOf="@id/topDivBot"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Successful Trades"
            android:textSize="11dp"
            android:textColor="@color/primary2"
            android:fontFamily="@font/poppins"
            android:gravity="start|top"
            app:layout_constraintStart_toStartOf="@id/leftDivLeft"
            app:layout_constraintEnd_toEndOf="@id/leftDivRight"
            app:layout_constraintTop_toBottomOf="@id/topDivBot"
            app:layout_constraintBottom_toTopOf="@id/horiDivTop"/>

        <TextView
            android:id="@+id/pendingText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="5"
            android:textSize="24dp"
            android:textColor="@android:color/holo_blue_light"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="start|top"
            app:layout_constraintStart_toStartOf="@id/rightDivLeft"
            app:layout_constraintEnd_toEndOf="@id/rightDivRight"
            app:layout_constraintTop_toBottomOf="@id/topDivTop"
            app:layout_constraintBottom_toTopOf="@id/topDivBot"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Pending Trades"
            android:textSize="11dp"
            android:textColor="@color/primary2"
            android:fontFamily="@font/poppins"
            android:gravity="start|top"
            app:layout_constraintStart_toStartOf="@id/rightDivLeft"
            app:layout_constraintEnd_toEndOf="@id/rightDivRight"
            app:layout_constraintTop_toBottomOf="@id/topDivBot"
            app:layout_constraintBottom_toTopOf="@id/horiDivTop"/>

        <TextView
            android:id="@+id/unsuccessfulText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="2"
            android:textSize="24dp"
            android:textColor="@android:color/holo_red_light"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="start|top"
            app:layout_constraintStart_toStartOf="@id/leftDivLeft"
            app:layout_constraintEnd_toEndOf="@id/leftDivRight"
            app:layout_constraintTop_toBottomOf="@id/horiDivBot"
            app:layout_constraintBottom_toTopOf="@id/botDivBot"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Unsuccessful Trades"
            android:textSize="11dp"
            android:textColor="@color/primary2"
            android:fontFamily="@font/poppins"
            android:gravity="start|top"
            app:layout_constraintStart_toStartOf="@id/leftDivLeft"
            app:layout_constraintEnd_toEndOf="@id/leftDivRight"
            app:layout_constraintTop_toBottomOf="@id/botDivBot"
            app:layout_constraintBottom_toTopOf="@id/botDivBot2"/>

        <TextView
            android:id="@+id/currentText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="4"
            android:textSize="24dp"
            android:textColor="@android:color/holo_orange_light"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="start|top"
            app:layout_constraintStart_toStartOf="@id/rightDivLeft"
            app:layout_constraintEnd_toEndOf="@id/rightDivRight"
            app:layout_constraintTop_toBottomOf="@id/horiDivBot"
            app:layout_constraintBottom_toTopOf="@id/botDivBot"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Current Trades"
            android:textSize="11dp"
            android:textColor="@color/primary2"
            android:fontFamily="@font/poppins"
            android:gravity="start|top"
            app:layout_constraintStart_toStartOf="@id/rightDivLeft"
            app:layout_constraintEnd_toEndOf="@id/rightDivRight"
            app:layout_constraintTop_toBottomOf="@id/botDivBot"
            app:layout_constraintBottom_toTopOf="@id/botDivBot2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tradeButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Start Trading"
        android:gravity="left|center"
        android:textAllCaps="false"
        android:padding="20dp"
        android:background="@drawable/buttonborder"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_semibold"
        android:drawableEnd="@drawable/ic_baseline_swap_horiz_24"
        app:layout_constraintStart_toStartOf="@id/tradeLeft"
